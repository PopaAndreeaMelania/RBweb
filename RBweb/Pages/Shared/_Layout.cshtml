<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RBweb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RBweb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <!-- BRAND + LOGO -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/images/home/Sigla.png"
                         alt="RB Logo"
                         style="height:50px; margin-right:10px;" />
                    <span style="font-weight:600; font-size:18px;">Romanian Burger</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Comenzi/Meniu">Vezi meniul</a>
                        </li>

                        <!-- THREE DOTS: TOT MENIUL AICI -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark"
                               href="#"
                               id="mainDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                ⋮
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="mainDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Privacy">Privacy</a>
                                </li>

                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider" /></li>

                                    <li><a class="dropdown-item" asp-page="/Admin/Users">Utilizatori</a></li>

                                    <li><a class="dropdown-item" asp-page="/Clienti/Index">Clienti</a></li>
                                    <li><a class="dropdown-item" asp-page="/Comenzi/Index">Comenzi</a></li>
                                    <li><a class="dropdown-item" asp-page="/Meniuri/Index">Meniuri</a></li>
                                    <li><a class="dropdown-item" asp-page="/Categorii/Index">Categorii</a></li>
                                }
                            </ul>
                        </li>
                    </ul>

                    <!-- RIGHT MENU -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">

                                    <img src="~/images/home/Iconitacont.png"
                                         alt="User"
                                         style="height:30px; width:30px; border-radius:50%; margin-right:8px;" />

                                    @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - RBweb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
