@page
@model RBweb.Pages.Categorii.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Creare categorii</h1>

<h4>Categorie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Categorie.CategoryName" class="control-label"></label>
                <input asp-for="Categorie.CategoryName" class="form-control" />
                <span asp-validation-for="Categorie.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn rb-btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn rb-btn-ghost">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}