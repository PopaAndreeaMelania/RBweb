@page "{id:int?}"
@model RBweb.Pages.Categorii.IndexModel

@{
    ViewData["Title"] = "Categorii";
}

<h1 class="rb-h1">Categorii</h1>

<p>
    <a asp-page="Create" class="btn rb-btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nume Categorie</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategorieData.Categorii)
        {
            string selectedRow = "";
            if (item.ID == Model.CategorieID)
            {
                selectedRow = "table-success";
            }

            <tr class="@selectedRow">
                <td>
                    @item.CategoryName
                </td>
                <td class="text-end">
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="btn rb-btn-ghost btn-sm">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.ID" class="btn rb-btn-ghost btn-sm">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CategorieData.Meniuri != null)
{
    <h3>Meniuri din categoria selectată</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Denumire</th>
                <th>Pret</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CategorieData.Meniuri)
            {
                <tr>
                    <td>@item.Denumire</td>
                    <td>@item.Pret</td>
                </tr>
            }
        </tbody>
    </table>
}