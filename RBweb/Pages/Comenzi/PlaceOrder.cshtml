@page
@model RBweb.Pages.Comenzi.PlaceOrderModel
@{
    ViewData["Title"] = "PlaceOrder";
}

<h1>Plasează comanda</h1>

@if (!Model.Cart.Any())
{
    <p>Coșul este gol.</p>
    <a class="btn btn-danger" asp-page="/Comenzi/Meniu">Înapoi la meniu</a>
}
else
{
    <ul class="list-group mb-3">
        @foreach (var item in Model.Cart)
        {
            <li class="list-group-item d-flex justify-content-between">
                <span>@item.Denumire (x@(item.Cantitate))</span>
                <span>@((item.Pret * item.Cantitate).ToString("0.00")) lei</span>
            </li>
        }
        <li class="list-group-item d-flex justify-content-between">
            <b>Total</b>
            <b>@Model.Total.ToString("0.00") lei</b>
        </li>
    </ul>

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Mențiuni (opțional)</label>
            <textarea class="form-control" asp-for="Mentiuni" rows="3"
                      placeholder="Ex: fără ceapă, sos separat, livrare rapidă..."></textarea>
        </div>

        <button class="btn btn-danger" type="submit">Confirmă comanda</button>
        <a class="btn btn-secondary" asp-page="/Comenzi/Cos">Înapoi la coș</a>
    </form>
}
