@page "{id:int}"
@model RBweb.Pages.Admin.Comenzi.EditModel
@using RBweb.Models
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

<h2>Editare status comandă</h2>

<form method="post">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Status"
                asp-items="Html.GetEnumSelectList<Comanda.StatusComanda>()"
                class="form-select">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Salvează</button>
    <a asp-page="./Index" class="btn btn-secondary">Înapoi</a>
</form>
