@page
@model LoginModel

@{
    ViewData["Title"] = "Autentificare";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h1>@ViewData["Title"]</h1>
            <p class="auth-subtitle">Intră în cont ca să continui.</p>
        </div>

        <!-- FORM 1: Local account -->
        <form id="account" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger auth-alert" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                       aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                       aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Parolă</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="auth-row">
                <label class="form-check auth-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                </label>

                <a id="forgot-password" class="auth-link" asp-page="./ForgotPassword">Ai uitat parola?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100 btn-lg auth-btn">
                Log in
            </button>

            <div class="auth-footer">
                <a class="auth-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                    Creează cont nou
                </a>
                <span class="auth-dot">•</span>
                <a id="resend-confirmation" class="auth-link" asp-page="./ResendEmailConfirmation">
                    Retrimite confirmarea email
                </a>
            </div>
        </form>

        <!-- FORM 2: External providers (separat, NU în interiorul primului) -->
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="auth-divider"><span>sau</span></div>

            <form id="external-account"
                  asp-page="./ExternalLogin"
                  asp-route-returnUrl="@Model.ReturnUrl"
                  method="post">
                <div class="auth-external">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-secondary w-100 mb-2"
                                name="provider" value="@provider.Name"
                                title="Log in using your @provider.DisplayName account">
                            Continuă cu @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
