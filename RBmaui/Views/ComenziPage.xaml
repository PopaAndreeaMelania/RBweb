<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RBmaui.Views.ComenziPage"
             Title="Comenzile mele">

    <Grid Padding="12" RowDefinitions="Auto,*">

        <Label Grid.Row="0"
               Text="Comenzile mele"
               FontSize="22"
               FontAttributes="Bold"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Comenzi}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,6">
                        <VerticalStackLayout Spacing="4">

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding NrStrigat, StringFormat='#{0}'}"
                                                FontSize="20"
                                                FontAttributes="Bold"/>

                                <Label Text="{Binding NumarComanda}"
                                                FontSize="18"
                                                FontAttributes="Bold"/>
                            </HorizontalStackLayout>


                            <Label Text="{Binding Status, StringFormat='Status: {0}'}"/>
                            <Label Text="{Binding Total, StringFormat='Total: {0:0.00} lei'}"/>
                            <Label Text="{Binding DataComanda, StringFormat='Data: {0:dd.MM.yyyy HH:mm}'}" FontSize="12"/>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
