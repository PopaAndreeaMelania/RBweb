    x:Class="RBmaui.Views.AddRecenziePage"
    Title="LasÄƒ recenzie">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Rating (1-5)" />

        <Stepper x:Name="RatingStepper"
                 Minimum="1"
