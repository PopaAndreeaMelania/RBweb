<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RBmaui.Views.AccountPage"
             Title="Cont">
    <VerticalStackLayout Padding="20" Spacing="12">

        <Label Text="Cont" FontSize="22" FontAttributes="Bold"/>

        <Label x:Name="EmailLabel" FontSize="16"/>
        <Label x:Name="RoleLabel" FontSize="14"/>

        <Button x:Name="LoginBtn" Text="Login" Clicked="Login_Clicked"/>
        <Button x:Name="RegisterBtn" Text="Creeaza cont" Clicked="Register_Clicked"/>

        <Button x:Name="MyOrdersBtn" Text="Comenzile mele" Clicked="Comenzi_Clicked"/>
        <Button x:Name="LogoutBtn" Text="Logout" Clicked="Logout_Clicked"/>

    </VerticalStackLayout>
</ContentPage>
