<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RBmaui.Views.MeniuPage"
             Title="Meniu">

    <VerticalStackLayout Padding="12" Spacing="10">

        <Label Text="Meniul Romanian Burger"
               FontSize="22"
               FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding Produse}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,6">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Denumire}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Pret, StringFormat='Pret: {0} lei'}"/>
                            <Label Text="{Binding Ingrediente}" FontSize="12" LineBreakMode="TailTruncation"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
